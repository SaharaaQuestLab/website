{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "module": "ESNext",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "vite-plugin-glsl/ext"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "public/*"
  ]
}