---
import TitleComponent from "@/components/TitleComponent.astro";
import RingLoop from "@/components/3DLoopSection.astro";
import TextTyping from "@/components/TextTyping.astro";
import Layout from "../layouts/PageLayout.astro";
import PageMeta from "@/data/personal";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import titleIcon_01 from "@/assets/icons/titleIcon_01.jpg";
import titleIcon_02 from "@/assets/icons/titleIcon_02.jpg";
import titleIcon_03 from "@/assets/icons/titleIcon_03.jpg";
import rings_03 from "@/assets/images/rings_03.jpg";
const { titles } = PageMeta;
---

<Layout title="saharaa.ai" active="personal">
  <slot slot="base-layout">
    <div
      id="sectionHero"
      class="w-screen h-screen first-screen-bottom-mask-wrap relative"
    >
    </div>

    <div
      id="sectionTitle"
      class="w-screen h-screen absolute left-0 top-0 pointer-events-none"
    >
      <TitleComponent titles={titles} />
    </div>
  </slot>
  <h1
    id="sectionPersonal"
    class="text-h2 font-[Manrope] text-center pt-[15.375rem] pb-[7.5rem] tablet:text-h5 tablet:pt-[3.75rem] tablet:pb-11"
  >
    Automate yourself
  </h1>
  <div
    class="flex gap-x-[3.125rem] font-[Manrope] mb-[3.75rem] tablet:flex-col tablet:items-center tablet:text-center tablet:mb-0"
  >
    <div
      class="common-up-move flex-1 border-b border-b-dark-100 tablet:border-none"
    >
      <div
        class="w-[7.5rem] tablet:w-20 mb-[3.75rem] tablet:mx-auto tablet:mb-4"
      >
        <img class="w-full" src={titleIcon_01.src} alt="logo" />
      </div>
      <h2 class="text-h5 tablet:text-s3">Build your</h2>
      <h2 class="text-h5 tablet:text-s3">personal knowledge Vault</h2>
      <div
        class="text-base tablet:text-sm tablet:w-[30rem] mobile:w-full text-light-200 mt-8 tablet:mt-4 h-[8.75rem] tablet:h-[6.875rem] mobile:h-[8.125rem]"
      >
        Claim ownership of your knowledge capital with your personal Sahara ID
        and safeguard it within your Knowledge Vault.
      </div>
    </div>
    <div
      class="common-up-move flex-1 border-b border-b-dark-100 tablet:border-none"
    >
      <div
        class="w-[7.5rem] tablet:w-20 mb-[3.75rem] tablet:mx-auto tablet:mb-4"
      >
        <img class="w-full" src={titleIcon_02.src} alt="logo" />
      </div>
      <h2 class="text-h5 tablet:text-s3">Train your</h2>
      <h2 class="text-h5 tablet:text-s3">own AI</h2>
      <div
        class="text-base tablet:text-sm tablet:w-[30rem] mobile:w-full text-light-200 mt-8 tablet:mt-4 h-[8.75rem] tablet:h-[6.875rem] mobile:h-[8.125rem]"
      >
        Create your replica AIs from your Knowledge Vault in a
        privacy-preserving way through Sahara Knowledge Agentâ€™s no-code
        platform.
      </div>
    </div>
    <div
      class="common-up-move flex-1 border-b border-b-dark-100 tablet:border-none"
    >
      <div
        class="w-[7.5rem] tablet:w-20 mb-[3.75rem] tablet:mx-auto tablet:mb-4"
      >
        <img class="w-full" src={titleIcon_03.src} alt="logo" />
      </div>
      <h2 class="text-h5 tablet:text-s3">Capitalize your</h2>
      <h2 class="text-h5 tablet:text-s3">knowledge at scale</h2>
      <div
        class="text-base tablet:text-sm tablet:w-[30rem] mobile:w-full text-light-200 mt-8 tablet:mt-4 h-[8.75rem] tablet:h-[6.875rem] mobile:h-[8.125rem]"
      >
        Participate in a broader decentralized network that enables cross-agent
        communication, knowledge transfer and capitalization between
        individuals.
      </div>
    </div>
  </div>
  <div
    id="joinWaitList"
    class="mx-auto w-[27rem] tablet:w-40 mobile:w-full mobile:text-xs whitespace-nowrap text-sm h-11 py-2.5 px-4 flex items-center justify-center rounded-xl common-button"
  >
    Join waitlist
    <Icon class="min-w-5 h-5" name="arrowRightUp" />
  </div>
  <div
    class="flex pt-[9.125rem] tablet:pt-0 tablet:mt-[3.75rem] tablet:flex-col"
  >
    <div
      class="py-[9.125rem] relative z-10 w-[40rem] font-[Manrope] tablet:py-[3.75rem] tablet:w-full tablet:text-center"
    >
      <div class="justify-center hidden tablet:flex mb-7">
        <Image class="w-60 h-60" src={rings_03} alt="" />
      </div>
      <div
        class="bg-dark-200 w-[7.5rem] text-base mx-auto rounded-[1.25rem] tablet:block hidden mobile:w-[6rem] mobile:text-mx"
      >
        Personal
      </div>
      <div
        class="text-h2 whitespace-nowrap font-[Manrope] text-light-200 tablet:text-h5"
      >
        Sahara<span class="tablet:hidden"> Personal</span>
      </div>
      <div
        class="text-h2 h-[160px] tablet:h-[100px] font-[Manrope] tablet:text-h5 w-[30.1rem] tablet:w-[21rem] mb-1.5 tablet:mx-auto"
      >
        <TextTyping text="Knowledge Agents" />
      </div>
      <div class="py-7 flex items-center tablet:py-4 tablet:justify-center">
        <div class="bg-[#D9D9D9] rounded-full w-2.5 h-2.5 mr-2"></div>
        Coming soon
      </div>
      <div
        class="text-light-200 text-s3 tablet:text-sm tablet:w-[30rem] mobile:w-full tablet:mx-auto"
      >
        Sahara Knowledge Agent (KA) Personal is an advanced personal replica
        based on your proprietary knowledge. It can interact with the
        environment and provide personalized adaptability and intelligence.
      </div>
      <div class="mt-[4.5rem] mb-7 border-t border-t-dark-100 tablet:my-4">
      </div>
      <div
        class="tablet:text-base text-light-100 tablet:w-[30rem] mobile:w-full tablet:mx-auto"
      >
        Leveraging proprietary blockchain and AI technology, Sahara KA is
        trained and served in a privacy-preserving, trustless, and decentralized
        manner.
      </div>
      <div
        id="waitList1"
        class="mx-auto mt-4 tablet:w-40 tablet:flex whitespace-nowrap tablet:text-sm tablet:h-11 text-base py-2.5 px-4 hidden items-center justify-center rounded-xl common-button"
      >
        Join waitlist
        <Icon class="min-w-5 h-5" name="arrowRightUp" />
      </div>
    </div>
    <div class="flex-1 flex justify-center items-center tablet:hidden">
      <RingLoop />
    </div>
  </div>
  <div slot="footer">
    <div class="placeholder bg-opacity-0 h-[50px] tablet:hidden mobile:hidden">
    </div>
  </div>
</Layout>
<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import HeroView from "@/webgl/HeroView";
  import { makeCommonAppearEffect } from "@/utils/gsap.utils";

  gsap.registerPlugin(ScrollTrigger);
  makeCommonAppearEffect();

  function goToWaitList() {
    window.open("https://hi.saharalabs.ai/get-in-touch", "_blank");
  }

  document
    .getElementById("joinWaitList")
    ?.addEventListener("click", goToWaitList);
  document.getElementById("waitList1")?.addEventListener("click", goToWaitList);

  const heroEl = document.getElementById("sectionHero");
  if (heroEl) {
    const viewer = new HeroView(heroEl, { layout: "two" });
    viewer.useSetup();
    viewer.play();
    gsap.to(heroEl, {
      scrollTrigger: {
        trigger: "#sectionPersonal",
        start: "top bottom",
        end: "top top-=30",
        scrub: true,
        onEnterBack: () => {
          viewer.play();
        },
        onLeave: () => {
          viewer.stop();
        },
      },
      opacity: 0,
    });
  }

  // const titleEl = document.getElementById("sectionTitle");
  // if (titleEl) {
  //   gsap.to(titleEl, {
  //     scrollTrigger: {
  //       trigger: "#sectionPersonal",
  //       start: "top bottom",
  //       end: "top top",
  //       scrub: true,
  //     },
  //     opacity: 0,
  //     y: "-50%",
  //   });
  // }
</script>
