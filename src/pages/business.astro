---
import TitleComponent from "@/components/TitleComponent.astro";
import Hero3DSection from "@/components/3DHeroSection.astro";
// import AutomateSection from "@/components/AutomateSection.astro";
import Layout from "../layouts/PageLayout.astro";
import PageMeta from "@/data/business";
import { Icon } from "astro-icon/components";
import titleIcon_01 from "@/assets/icons/titleIcon_01.jpg";
import titleIcon_02 from "@/assets/icons/titleIcon_02.jpg";
import titleIcon_03 from "@/assets/icons/titleIcon_03.jpg";
import graph_01 from "@/assets/icons/graph_01.png";
import graph_02 from "@/assets/icons/graph_02.png";

const { titles } = PageMeta;
---

<Layout title="saharaa.ai" active="business">
  <TitleComponent titles={titles} />
  <Hero3DSection />
  <h1 class="gradient-text text-center pt-40 pb-[7.5rem]">
    Automate Your business
  </h1>
  <div class="px-40 flex gap-[3.125rem] font-[Manrope] mb-[3.75rem]">
    <div class="flex-1">
      <div class="w-[7.5rem] mb-[3.75rem]">
        <img class="w-full" src={titleIcon_01.src} alt="logo" />
      </div>
      <h2 class="text-4xl">Create</h2>
      <h2 class="text-4xl">Proprietary AI Agents</h2>
      <div
        class="text-lg text-[#979EA8] mt-7 pb-[3.75rem] border-b border-b-[#404347]"
      >
        Build Sahara Knowledge Agents as custom on-premise AI solutions that
        save costs, drive growth, and enable new business opportunities.
      </div>
    </div>
    <div class="flex-1">
      <div class="w-[7.5rem] mb-[3.75rem]">
        <img class="w-full" src={titleIcon_02.src} alt="logo" />
      </div>
      <h2 class="text-4xl">Maximize</h2>
      <h2 class="text-4xl">Business Efficiency</h2>
      <div
        class="text-lg text-[#979EA8] mt-7 pb-[3.75rem] border-b border-b-[#404347]"
      >
        Elevate productivity through workflow automation, predictive analytics,
        personalized experiences, resource optimization, and supply chain
        enhancement.
      </div>
    </div>
    <div class="flex-1">
      <div class="w-[7.5rem] mb-[3.75rem]">
        <img class="w-full" src={titleIcon_03.src} alt="logo" />
      </div>
      <h2 class="text-4xl">Leverage</h2>
      <h2 class="text-4xl">Global Knowledge Capital</h2>
      <div
        class="text-lg text-[#979EA8] mt-7 pb-[3.75rem] border-b border-b-[#404347]"
      >
        Participate in Sahara Data, a trustless, permissionless, and
        privacy-preserving platform for high-value datasets and data services to
        train AI.
      </div>
    </div>
  </div>
  <div
    class="mx-auto w-[27.25rem] border whitespace-nowrap border-[#474040] text-base leading-5 cursor-pointer py-2.5 px-4 flex items-center justify-center rounded-xl text-[#E1E4E7]"
  >
    Book a Demo
    <Icon class="w-5 h-5" name="arrowRightUp" />
  </div>
  <div class="flex px-40 mt-40 mb-20">
    <div class="py-[7.25rem] w-[40rem] font-[Manrope]">
      <div class="gradient-text text-[#878A8D]">Sahara</div>
      <div class="gradient-text">Knowledge</div>
      <div class="gradient-text">Agent (KA)</div>
      <div class="text-[#979EA8] mt-[3.75rem]">
        Sahara KA Business extends far beyond conversational capabilities,
        autonomously analyzing both external and internal proprietary data to
        offer reliable decision-making tailored to specific needs.
      </div>
    </div>
    <div class="flex-1 bg-white"></div>
  </div>
  <div
    class="grid grid-cols-12 gap-x-10 mx-40 py-[3.75rem] font-[Manrope] border-b mb-[7.5rem] border-b-[#404347]"
  >
    <div class="col-span-4 text-[5.625rem] leading-[5.125rem] flex flex-col justify-center">
      <div>Sahara</div>
      <div>Data</div>
    </div>
    <div class="col-span-3 gap-x-4 flex items-center">
      <Icon class="w-7 h-7" name="brandLogo"/>
      <Icon class="w-7 h-7 text-[#979EA8]" name="brandLogo"/>
      <Icon class="w-7 h-7 text-[#62666D]" name="brandLogo"/>
      <Icon class="w-7 h-7 text-[#62666D]" name="brandLogo"/>
    </div>
    <div class="col-span-5 text-[#979EA8]">
      <div class="mb-10">
        Sahara Data is an end-to-end platform designed to meet the most
        challenging training data demands.
      </div>
      <div>
        The platform, decentralized or on-premise, offers an intelligent
        AI-centered, human-in-the-loop, and privacy-preserving approach to
        generate High Value datasets for your AI.
      </div>
    </div>
  </div>
  <div class="font-[Manrope] px-40 mb-[7.5rem]">
    <div class="text-[#979EA8] text-[2.25rem] leading-[3rem] mb-[3.75rem]">Sahara Data by Uses</div>
    <div class="mb-8 grid grid-cols-12 gap-x-7">
      <div class="flex items-center text-[2rem] col-span-4">
        <Icon class="min-w-8 h-8 mr-5" name="text"/>
        Text
      </div>
      <div class="col-span-2 border border-[#62666D] rounded-[1.25rem] h-40 flex relative items-end p-4">
        <Icon class="w-5 h-5 absolute top-4 right-4" name="Pin"/>
        <span class="text-[1rem] leading-6">Objection detection</span>
      </div>
      <div class="col-span-2 border border-[#62666D] rounded-[1.25rem] h-40 flex relative items-end p-4">
        <Icon class="w-5 h-5 absolute top-4 right-4" name="Pin"/>
        <span class="text-[1rem] leading-6">Multimedia classification</span>
      </div>
      <div class="col-span-2 border border-[#62666D] rounded-[1.25rem] h-40 flex relative items-end p-4">
        <Icon class="w-5 h-5 absolute top-4 right-4" name="Pin"/>
        <span class="text-[1rem] leading-6">Image collection</span>
      </div>
      <div class="col-span-2 border border-[#62666D] rounded-[1.25rem] h-40 flex relative items-end p-4">
        <Icon class="w-5 h-5 absolute top-4 right-4" name="Pin"/>
        <span class="text-[1rem] leading-6">Semantic segmentation </span>
      </div>
    </div>
    <div class="mb-8 grid grid-cols-12 gap-x-7">
      <div class="flex items-center text-[2rem] col-span-4">
        <Icon class="w-8 h-8 mr-5" name="image"/>
        Image & Video
      </div>
      <div class="col-span-2"></div>
      <div class="col-span-2 border border-[#62666D] rounded-[1.25rem] h-40 flex relative items-end p-4">
        <Icon class="w-5 h-5 absolute top-4 right-4" name="Pin"/>
        <span class="text-[1rem] leading-6">Multilingual audio collection</span>
      </div>
      <div class="col-span-2 border border-[#62666D] rounded-[1.25rem] h-40 flex relative items-end p-4">
        <Icon class="w-5 h-5 absolute top-4 right-4" name="Pin"/>
        <span class="text-[1rem] leading-6">Audio classification</span>
      </div>
      <div class="col-span-2 border border-[#62666D] rounded-[1.25rem] h-40 flex relative items-end p-4">
        <Icon class="w-5 h-5 absolute top-4 right-4" name="Pin"/>
        <span class="text-[1rem] leading-6">Image collection / Audio transcription</span>
      </div>
    </div>
    <div class="grid grid-cols-12 gap-x-7">
      <div class="flex items-center text-[2rem] col-span-4">
        <Icon class="w-8 h-8 mr-5" name="music"/>
        Audio
      </div>
      <div class="col-span-2 border border-[#62666D] rounded-[1.25rem] h-40 flex relative items-end p-4">
        <Icon class="w-5 h-5 absolute top-4 right-4" name="Pin"/>
        <span class="text-[1rem] leading-6">RLHF for LLM</span>
      </div>
      <div class="col-span-2 border border-[#62666D] rounded-[1.25rem] h-40 flex relative items-end p-4">
        <Icon class="w-5 h-5 absolute top-4 right-4" name="Pin"/>
        <span class="text-[1rem] leading-6">Multimodal prompt generation</span>
      </div>
      <div class="col-span-2 border border-[#62666D] rounded-[1.25rem] h-40 flex relative items-end p-4">
        <Icon class="w-5 h-5 absolute top-4 right-4" name="Pin"/>
        <span class="text-[1rem] leading-6">LLM bias detection</span>
      </div>
      <div class="col-span-2 border border-[#62666D] rounded-[1.25rem] h-40 flex relative items-end p-4">
        <Icon class="w-5 h-5 absolute top-4 right-4" name="Pin"/>
        <span class="text-[1rem] leading-6">Content moderation</span>
      </div>
    </div>
  </div>
  <div class="font-[Manrope] px-40 mb-[16.25rem]">
    <div class="text-[#979EA8] text-[2.25rem] leading-[3rem] mb-[3.75rem]">Sahara Data by numbers</div>
    <div class="gap-x-7 grid grid-cols-5">
      <div>
        <div class="text-[3.5rem] leading-[3.25rem]">31+</div>
        <div class="text-[1.5rem] leading-9">
          Enterprise Clients
        </div>
      </div>
      <div>
        <div class="text-[3.5rem] leading-[3.25rem]">35+</div>
        <div class="text-[1.5rem] leading-9">
          Countries
        </div>
      </div>
      <div>
        <div class="text-[3.5rem] leading-[3.25rem]">45+</div>
        <div class="text-[1.5rem] leading-9">
          Languages & Dialects
        </div>
      </div>
      <div>
        <div class="text-[3.5rem] leading-[3.25rem]">150+</div>
        <div class="text-[1.5rem] leading-9">
          Partner providers
        </div>
      </div>
      <div>
        <div class="text-[3.5rem] leading-[3.25rem]">30,000+</div>
        <div class="text-[1.5rem] leading-9">
          Vetted AI Trainers
        </div>
      </div>
    </div>
  </div>
  <div
    class="grid grid-cols-12 gap-x-10 mx-40 py-[3.75rem] font-[Manrope] border-b mb-[7.5rem] border-b-[#404347]"
  >
    <div class="col-span-4 text-[5.625rem] leading-[5.125rem]">
      <div>Why</div>
      <div>Sahara</div>
      <div>Data</div>
    </div>
    <div class="col-span-3 gap-x-4 flex items-center">
      <Icon class="w-7 h-7" name="brandLogo"/>
      <Icon class="w-7 h-7 text-[#979EA8]" name="brandLogo"/>
      <Icon class="w-7 h-7 text-[#62666D]" name="brandLogo"/>
      <Icon class="w-7 h-7 text-[#62666D]" name="brandLogo"/>
    </div>
    <div class="col-span-5 text-[#979EA8] flex flex-col justify-center">
      Sahara Data harnesses advanced AI and blockchain technology to optimize
      labeling workflow and offer unparalleled data quality at a competitive
      price.
    </div>
  </div>
  <div class="mt-[3.75rem] mx-40 border border-[#62666D] rounded-[3.125rem] font-[Manrope]">
   <div class="flex flex-nowrap overflow-hidden">
    <div class="flex col-span-1 gap-x-32 min-w-full p-[3.75rem] pb-0" id="content1">
      <div class="flex-1 flex items-center" >
        <img class="w-full" src={graph_01.src} alt="">
      </div>
      <div class="flex-1 flex flex-col justify-center" id="content1">
        <div class="text-[2.25rem] leading-[3rem] mb-11">
          Redefine Human-AI Collaboration 
        </div>
        <div class="flex items-center text-[2rem] mb-1.5">
          <Icon class="w-7 h-7 mr-7" name="brandLogo"/>
          Automatic Labeling
        </div>
        <div class="pl-14 text-[#979EA8] text-base mb-10">
          Proprietary models fuel auto-labeling that matches human performance on mainstream tasks.
        </div>
        <div class="flex items-center text-[2rem] mb-1.5">
          <Icon class="w-7 h-7 mr-7" name="brandLogo"/>
          Human-in-the-loop Infrastructure
        </div>
        <div class="pl-14 text-[#979EA8] text-base mb-10">
          Humans meticulously check and refine auto-labeling results until the desired quality is achieved. 
        </div>
        <div class="flex items-center text-[2rem] mb-1.5">
          <Icon class="w-7 h-7 mr-7" name="brandLogo"/>
          Continuous Learning
        </div>
        <div class="pl-14 text-[#979EA8] text-base">
          Models learn from human input, iteratively improving the labeling quality. 
        </div>
      </div>
    </div>
    <div class="flex col-span-1 gap-x-32 min-w-full p-[3.75rem] pb-0" id="content2">
      <div class="flex-1 flex items-center">
        <img class="w-full" src={graph_02.src} alt="">
      </div>
      <div class="flex-1 flex flex-col justify-center">
        <div class="text-[2.25rem] leading-[3rem] mb-11">
          Optimal Balance Between AI and Human Input
        </div>
        <div class="flex items-center text-base text-[#979EA8]">
          <Icon class="w-7 h-7 mr-7" name="brandLogo"/>
          Sahara Data incorporates human input with precision until optimal quality is achieved. This way, you won’t spend extra time or money while still obtaining the best quality. 
        </div>
      </div>
    </div>
   </div>
    <div class="py-[2.5rem] flex items-center justify-center">
      <div class="bg-[#D9D9D9] w-2.5 h-2.5 rounded-full mr-2.5 cursor-pointer" id="slider1">
      </div>
      <div class="bg-[#D9D9D9] bg-opacity-40 w-2.5 h-2.5 rounded-full cursor-pointer" id="slider2">
      </div>
    </div>
  </div>
  <div class="mb-[7.5rem] mx-40 py-[3.75rem] font-[Manrope] flex flex-col items-center">
    <div class="bg-[#242629] rounded-[1.25rem] w-[21.875rem] py-2.5 text-[2.25rem] leading-8 flex justify-center items-center"><div class="w-2.5 h-2.5 bg-[#E1E4E7] rounded-full mr-4"></div>Sahara Data is live</div>
    <div class="my-11 text-4xl leading-[3rem]">
      Talk to us today about the unique data solution for your AI training
      needs.
    </div>
    <div
      class="mx-auto w-36 border whitespace-nowrap border-[#474040] font-[IBMPlexMono-Medium] text-sm leading-6 cursor-pointer py-2.5 px-4 flex items-center justify-center rounded-xl text-[#E1E4E7]"
    >
      Book a Demo
      <Icon class="w-5 h-5" name="arrowRightUp" />
    </div>
  </div>
  <!-- <AutomateSection /> -->
  <div slot="footer">
    <h1 class="gradient-text">Your Ultimate Partner</h1>
    <h1 class="gradient-text">for High Value Data</h1>
  </div>
</Layout>
<script>
import { gsap } from "gsap";

  // 获取元素
  const slider1 = document.getElementById('slider1') as HTMLElement;
  const slider2 = document.getElementById('slider2') as HTMLElement;
  const content1 = document.getElementById('content1');
  const content2 = document.getElementById('content2');

  // 添加事件监听器
  slider2.addEventListener('click', () => {
    // 使用 GSAP 来平滑地切换内容
    gsap.to(content1, {
      duration: 0.5,
      ease: 'power1.inOut',
      x: '-100%'
    });
    gsap.to(content2, {
      duration: 0.5,
      ease: 'power1.inOut',
      x: '-100%'
    });
    slider1.classList.toggle("bg-opacity-40");
    slider2.classList.toggle("bg-opacity-40");
  });
  // 添加事件监听器
  slider1.addEventListener('click', () => {
 // 使用 GSAP 来平滑地切换内容
    gsap.to(content1, {
      duration: 0.5,
      ease: 'power1.inOut',
      x: '0'
    });
    gsap.to(content2, {
      duration: 0.5,
      ease: 'power1.inOut',
      x: '0'
    });
    slider1.classList.toggle("bg-opacity-40");
    slider2.classList.toggle("bg-opacity-40");
  });

</script>
<style>
  .gradient-text {
    white-space: nowrap;
    font-size: 6.875rem;
    line-height: 6.375rem;
    font-family: Manrope;
    color: #e1e4e7;
  }
</style>
