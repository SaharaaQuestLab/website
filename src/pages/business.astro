const { titles } = PageMeta;
---

<Layout title="saharaa.ai" active="business" isFooterSlot={true}>
  <slot slot="base-layout">
    <div
      id="sectionHero"
      class="w-screen h-screen first-screen-bottom-mask-wrap relative"
    >
    </div>

    <div
      id="sectionTitle"
      class="w-screen h-screen absolute left-0 top-0 pointer-events-none"
    >
      <TitleComponent titles={titles} />
    </div>
  </slot>
  <h1
    id="sectionBusiness"
    class="text-h2 font-[Manrope] text-center pt-[15.375rem] pb-[7.5rem] tablet:text-h5 tablet:pt-[3.75rem] tablet:pb-11"
  >
    Automate Your business
  </h1>
  <div
    class="flex gap-x-[3.125rem] font-[Manrope] mb-[3.75rem] tablet:flex-col tablet:items-center tablet:text-center tablet:mb-0"
  >
    <div
      class="common-up-move flex-1 border-b border-b-dark-100 tablet:border-none"
    >
      <div
        class="w-[7.5rem] mb-[3.75rem] tablet:mx-auto tablet:mb-4 mobile:w-20"
      >
        <img class="w-full" src={titleIcon_01.src} alt="logo" />
      </div>
      <h2 class="text-h5 tablet:text-s3">Create</h2>
      <h2 class="text-h5 tablet:text-s3">Proprietary AI Agents</h2>
      <div
        class="text-base tablet:text-sm tablet:w-[30rem] mobile:w-full text-light-200 mt-8 tablet:mt-4 h-[8.75rem] tablet:h-[6.875rem] mobile:h-[8.125rem]"
      >
        Build Sahara Knowledge Agents as custom on-premise AI solutions that
        save costs, drive growth, and enable new business opportunities.
      </div>
    </div>
    <div
      class="common-up-move flex-1 border-b border-b-dark-100 tablet:border-none"
    >
      <div
        class="w-[7.5rem] mb-[3.75rem] tablet:mx-auto tablet:mb-4 mobile:w-20"
      >
        <img class="w-full" src={titleIcon_02.src} alt="logo" />
      </div>
      <h2 class="text-h5 tablet:text-s3">Maximize</h2>
      <h2 class="text-h5 tablet:text-s3">Business Efficiency</h2>
      <div
        class="text-base tablet:text-sm tablet:w-[30rem] mobile:w-full text-light-200 mt-8 tablet:mt-4 h-[8.75rem] tablet:h-[6.875rem] mobile:h-[8.125rem]"
      >
        Elevate productivity through workflow automation, predictive analytics,
        personalized experiences, resource optimization, and supply chain
        enhancement.
      </div>
    </div>
    <div
      class="common-up-move flex-1 border-b border-b-dark-100 tablet:border-none"
    >
      <div
        class="w-[7.5rem] mb-[3.75rem] tablet:mx-auto tablet:mb-4 mobile:w-20"
      >
        <img class="w-full" src={titleIcon_03.src} alt="logo" />
      </div>
      <h2 class="text-h5 tablet:text-s3">Leverage</h2>
      <h2 class="text-h5 tablet:text-s3">Global Knowledge Capital</h2>
