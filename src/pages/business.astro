        <Icon
          class="min-w-8 h-8 tablet:w-6 tablet:h-6 mr-5 tablet:mr-3"
          name="text"
        />
        Text
      </div>
      <div
        class="col-span-2 tablet:col-span-3 mobile:col-span-12 mobile:h-11 mobile:rounded-xl mobile:mb-2 border border-light-300 rounded-[1.25rem] h-[7.5rem] tablet:h-[5.5rem] flex relative items-end p-4 tablet:pb-3 tablet:pt-2"
