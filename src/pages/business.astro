<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import HeroView, { type HeroInitOptions } from "@/webgl/HeroView";
  import { makeCommonAppearEffect } from "@/utils/gsap.utils";

  gsap.registerPlugin(ScrollTrigger);
  makeCommonAppearEffect();

  const heroEl = document.getElementById("sectionHero");
  if (heroEl) {
    const viewer = new HeroView(heroEl, { layout: "two" });
    viewer.useSetup();
    viewer.play();
    gsap.to(heroEl, {
      scrollTrigger: {
        trigger: "#sectionBusiness",
        start: "top bottom",
        end: "top top-=30",
        scrub: true,
        onEnterBack: () => {
          viewer.play();
        },
        onLeave: () => {
          viewer.stop();
        },
      },
      opacity: 0,
    });
  }

  const titleEl = document.getElementById("sectionTitle");
  if (titleEl) {
    gsap.to(titleEl, {
      scrollTrigger: {
        trigger: "#sectionBusiness",
        start: "top bottom",
        end: "top top",
        scrub: true,
      },
      opacity: 0,
      y: "-50%",
    });
  }

  // 获取元素
  const slider1 = document.getElementById("slider1") as HTMLElement;
  const slider2 = document.getElementById("slider2") as HTMLElement;
  const content1 = document.getElementById("content1");
  const content2 = document.getElementById("content2");

  // 添加事件监听器
  slider2.addEventListener("click", () => {
    // 使用 GSAP 来平滑地切换内容
    gsap.to(content1, {
      duration: 0.5,
      ease: "power1.inOut",
      x: "-100%",
    });
    gsap.to(content2, {
      duration: 0.5,
      ease: "power1.inOut",
      x: "-100%",
    });
    slider1.classList.toggle("bg-opacity-40");
    slider2.classList.toggle("bg-opacity-40");
  });
  // 添加事件监听器
  slider1.addEventListener("click", () => {
    // 使用 GSAP 来平滑地切换内容
    gsap.to(content1, {
      duration: 0.5,
      ease: "power1.inOut",
      x: "0",
    });
    gsap.to(content2, {
      duration: 0.5,
      ease: "power1.inOut",
      x: "0",
    });
    slider1.classList.toggle("bg-opacity-40");
    slider2.classList.toggle("bg-opacity-40");
  });
</script>
