---
import TitleComponent from "@/components/TitleComponent.astro";
import Ring3DSection from "@/components/3DRingSection.astro";
import SwiperSection from "@/components/SwiperSection.astro";
import Layout from "../layouts/PageLayout.astro";
import PageMeta from "@/data/index";
import { Icon } from "astro-icon/components";
const { titles } = PageMeta;
---

<div
  class="items-center py-2.5 hidden tablet:flex bg-light-100 relative z-50 justify-center text-dark-400"
>
  Sahara raises $6M in seed round led by Polychain Capital
