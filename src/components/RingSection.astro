---
import { Image } from "astro:assets";
import rings_01 from "@/assets/images/rings_01.jpg";
import rings_02 from "@/assets/images/rings_02.jpg";
import rings_03 from "@/assets/images/rings_03.jpg";
---

<div  class="w-full flex-col items-center relative hidden tablet:flex">

  <div
    class="flex-shrink-0 flex-grow-0 w-[46.75rem] tablet:w-full font-[Manrope]"
  >
    <ul class="w-full text-center mb-11">
      <li class="flex flex-col items-center">
        <div class="w-60 h-60" id="ring-3d-1"></div>
        <!-- <h1 class="text-sm mb-4 font-[IBMPlexMono] text-light-200">#1</h1> -->
        <h1 class="mb-1 text-h5">
          <div class="mb-0.5">Own your</div>
          <div>knowledge</div>
        </h1>
        <div class="text-sm mt-3 w-[30rem] mobile:w-[22rem] text-light-200">
          Use blockchain infrastructure that's trustless, permissionless, and
          privacy-preserving so your information stays under your control.
        </div>
      </li>
      <li class="h-[60px] mt-2.5"></li>
      <li class="flex flex-col items-center">
        <div class="w-60 h-60" id="ring-3d-2"></div>
        <!-- <h1 class="text-sm mb-4 font-[IBMPlexMono] text-light-200">#2</h1> -->
        <h1 class="mb-1 text-h5">
          <div class="mb-0.5">Scale your</div>
          <div>knowledge</div>
        </h1>
        <div class="text-sm mt-3 w-[30rem] mobile:w-[22rem] text-light-200">
          Create autonomous Al agents that expand the impact of your knowledge
          base, skills, and expertise and are customized to meet your needs.
        </div>
      </li>
      <li class="h-[60px] mt-2.5"></li>
      <li class="flex flex-col items-center">
        <div class="w-60 h-60" id="ring-3d-3"></div>
        <!-- <h1 class="text-xs mb-4 font-[IBMPlexMono] text-light-200">#3</h1> -->
        <h1 class="mb-1 text-h5">
          <div class="mb-0.5">Monetize your</div>
          <div>knowledge</div>
        </h1>
        <div class="text-sm mt-3 w-[30rem] mobile:w-[22rem] text-light-200">
          Join the decentralized ecosystem of global knowledge capital to
          leverage your data for novel income opportunities.
        </div>
      </li>
    </ul>
  </div>
  <slot>
  </slot>
</div>
<script>
    import RingView from "@/webgl/RingView";
    const viewEl = document.getElementById("ring-3d-1");
    const viewEl2 = document.getElementById("ring-3d-2");
    const viewEl3 = document.getElementById("ring-3d-3");
    const viewer = new RingView(viewEl || document.createElement("div"));
    const viewer2 = new RingView(viewEl2 || document.createElement("div"));
    const viewer3 = new RingView(viewEl3 || document.createElement("div"));
    viewer.useSetup();
    viewer2.useSetup();
    viewer3.useSetup();
    viewer.play();
    viewer2.scene1To2();
    viewer2.play();
    viewer3.scene2To3();
    viewer3.play();
</script>