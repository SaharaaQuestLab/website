---
import { Icon } from "astro-icon/components";
import PageMeta from "@/data/footer";
const { authorization, privacyPolicy, email, subscribe } = PageMeta;
---

<div class="footer px-40 tablet:px-7">
  <slot name="footer"></slot>
  <div class="flex tablet:flex-col tablet:items-center text-base text-light-200 justify-between my-[3.75rem] tablet:my-7 pt-[3.75rem] tablet:pt-5">
    <div class="flex tablet:flex-col tablet:items-center">
      <div class="leading-[2.625rem] font-[Manrope] pr-5 whitespace-nowrap">
        Follow us to get the latest updates
      </div>
      <div class="flex gap-1 ml-5 tablet:ml-0 tablet:mt-4 tablet:mb-5 tablet:items-center">
        <a class="p-3">
          <Icon class="w-5 h-5" name="twitter"/>
        </a>
        <a class="p-3">
          <Icon class="w-5 h-5" name="linkedin"/>
        </a>
        <a class="p-3">
          <Icon class="w-5 h-5" name="dicord"/>
        </a>
        <a class="p-3">
          <Icon class="w-5 h-5" name="telegram"/>
        </a>
      </div>
    </div>
    <div class="border border-light-100 flex px-4 py-2 bg-dark-400 rounded-xl w-[40rem] tablet:w-full justify-between">
      <div class="text-light-200 flex items-center">
        <Icon class="w-5 h-5 mr-1.5" name="email"/>
        {email}
      </div>
      <div class="cursor-pointer flex text-light-100 items-center">
        {subscribe}
        <Icon class="w-5 h-5" name="arrowRightUp"/>
      </div>
    </div>
  </div>
  <div class="border-t text-light-200 border-t-dark-100 border-opacity-40 flex justify-between text-sm mt-5">
    <div class="px-3 py-2.5">
      {authorization}
    </div>
    <div class="px-3 py-2.5">
      {privacyPolicy}
    </div>
  </div>
</div>

<style>

.footer {
  background: linear-gradient(to top, rgba(18, 19, 21,1), rgba(18, 19, 21,0));
}
</style>
